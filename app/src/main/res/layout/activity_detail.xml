<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:pointerIcon="zoom_in">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/detailTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="12dp"
                    android:text="Title"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold|italic" />

                <ImageView
                    android:id="@+id/detailImage"
                    android:layout_width="400dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/stopsmoking" />

                <TextView
                    android:id="@+id/detailDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="-10dp"
                    android:breakStrategy="high_quality"
                    android:justificationMode="inter_word"
                    android:lineSpacingExtra="4sp"
                    android:padding="20dp"
                    android:singleLine="false"
                    android:text="Description"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/detailDesc8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:autoLink="all"
                    android:linksClickable="true"
                    android:padding="20dp"
                    android:text="Description"
                    android:textColor="@color/black"
                    android:textColorLink="#045278"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/detailTitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="12dp"
                    android:text="Title"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/detailImage2"
                    android:layout_width="match_parent"
                    android:layout_height="237dp"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/stopsmoking" />

                <com.borjabravo.readmoretextview.ReadMoreTextView
                    android:id="@+id/detailDesc2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="4sp"
                    android:padding="20dp"
                    android:text="Description"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:colorClickableText="#039BE5"
                    app:trimCollapsedText="@string/read_more"
                    app:trimExpandedText="@string/read_less" />

                <ImageView
                    android:id="@+id/detailImage3"
                    android:layout_width="match_parent"
                    android:layout_height="237dp"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sugardrinks" />

                <com.borjabravo.readmoretextview.ReadMoreTextView
                    android:id="@+id/detailDesc3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="8sp"
                    android:padding="20dp"
                    android:text="Description"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:colorClickableText="#039BE5"
                    app:trimCollapsedText="@string/read_more"
                    app:trimExpandedText="@string/read_less" />

                <ImageView
                    android:id="@+id/detailImage4"
                    android:layout_width="match_parent"
                    android:layout_height="237dp"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sugardrinks" />

                <com.borjabravo.readmoretextview.ReadMoreTextView
                    android:id="@+id/detailDesc4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="4sp"
                    android:padding="20dp"
                    android:text="Description"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:colorClickableText="#039BE5"
                    app:trimCollapsedText="@string/read_more"
                    app:trimExpandedText="@string/read_less" />

                <ImageView
                    android:id="@+id/detailImage5"
                    android:layout_width="match_parent"
                    android:layout_height="237dp"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sugardrinks" />

                <com.borjabravo.readmoretextview.ReadMoreTextView
                    android:id="@+id/detailDesc5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="8sp"
                    android:padding="20dp"
                    android:text="Description"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:colorClickableText="#039BE5"
                    app:trimCollapsedText="@string/read_more"
                    app:trimExpandedText="@string/read_less" />

                <ImageView
                    android:id="@+id/detailImage6"
                    android:layout_width="match_parent"
                    android:layout_height="237dp"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sugardrinks" />

                <com.borjabravo.readmoretextview.ReadMoreTextView
                    android:id="@+id/detailDesc6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="8sp"
                    android:padding="20dp"
                    android:text="Description"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:colorClickableText="#039BE5"
                    app:trimCollapsedText="@string/read_more"
                    app:trimExpandedText="@string/read_less" />

                <TextView
                    android:id="@+id/detailDesc7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:autoLink="all"
                    android:linksClickable="true"
                    android:padding="20dp"
                    android:text="Description"
                    android:textColor="@color/black"
                    android:textColorLink="#045278"
                    android:textSize="20sp" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>